<html>
<meta http-equiv="Content-Type" content="text/html;charset=UTF-8">
<!-- Latest compiled and minified CSS -->
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css" integrity="sha512-dTfge/zgoMYpP7QbHy4gWMEGsbsdZeCXz7irItjcC3sPUFtf0kuFbDz/ixG7ArTxmDjLXDmezHubeNikyKGVyQ==" crossorigin="anonymous">
<script src="http://code.jquery.com/jquery-1.11.3.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js" integrity="sha512-K1qjQ+NcF2TYO/eI3M6v8EiNYZfA95pQumfvcVrTHtwQVDG+aHRqLi/ETn2uB+1JqwYqVG3LIvdm9lj6imS/pQ==" crossorigin="anonymous"></script>
<body>
<div class="container">
    <div class="row" style="width:100%">
        <div class="col-md-6 col-md-offset-3"><h1><%= title %>title <!--오늘 뭐 먹지? --></h1></div>
    </div>
    <div class="row" style="width:100%">

    </div>


    <div class="well">TODAY is ... </div>
    <div class="progress" style="display: none;">
        <div class="progress-bar progress-bar-info" role="progressbar" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100" style="width: 20%">
            <span class="sr-only">20% Complete</span>
        </div>
    </div>

    <div class="row text-center" >
    <button type="submit" class="btn btn-primary btn-lg goToday" >Submit<!-- 뭐 먹을까? --></button>
    <button type="submit" class="btn btn-default btn-lg manage" >manage</button>
    </div>
</div>

</body>
<script>
    $(document).ready(function() {
        $('.goToday').on('click', function () {
            $('.progress').toggle();

            for(var i=0; i <= 10; i++ ) {
                $('.progress .progress-bar').css("width", i*10 +"%");
            }

            setTimeout(function() {
                $.get( "/api/today", function( data ) {
                    $('.well').append(data.rest_name).append('<p>');
                    $('.well').append('<img src=\'' +  data.pic + '\'/>' )
                    $('.well').append('<button class=\'more\'>more</button>');

                    $('.more').on('click', function () {
                        location.href = '/restraunts/' + data.id;
                    })
                });
            }, 1000)
        });

        $('.manage').on('click', function () {
            location.href = '/manage';
        });
    });
</script>
</html>